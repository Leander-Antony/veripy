{
    "name": "Selected Text Logger",
    "version": "1.0",
    "manifest_version": 3,
    "description": "Right-click to log selected text to the console.",
    "permissions": [
      "contextMenus",
      "activeTab",
      "scripting"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_title": "Log Selected Text"
    },
    "icons": {
      "17": "icons/icon17.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.jpg"
    }
  }
  