{
    "manifest_version": 3,
    "name": "VeriPy",
    "version": "1.0",
    "description": "A Chrome extension to display the credibility score of news.",
    "icons": {
      "16": "icons/03.jpg",
      "48": "icons/00.jpg",
      "128": "icons/01.jpg"
    },
    "permissions": [
        "contextMenus",
        "activeTab",
        "storage"
    ],
    "host_permissions": ["<all_urls>"],
    "action": {
      "default_popup": "index.html",
      "default_icon": "icons/00.jpg"
    },
    "background": {
      "service_worker": "background.js"
    }
}